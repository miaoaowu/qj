page{
  background: #fff
}
.container {
  background-color: snow;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.img {
  width: 100%;
  height: 60%;
  margin-top: 10%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.img image {
  width: 160rpx;
  height: 380rpx;

}

.btn{
 margin-top: 160rpx;
   font-weight:500;  
  color: #fff;
 background: linear-gradient(120deg, #4EDEFF,#5DC2FA);
 box-shadow: 0px 3px 5px #c0c0c0;
 border:0;
 font-size: 16px;
 font-family: 微软雅黑;
 
}

.txt {
  width: 100%;
  height: 30%;
  margin-top: 10%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.txt text {
  font-size: 50rpx;
  font-weight: 800rpx;
  color: midnightblue;
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

@-webkit-keyframes fadeInOut {
  0% {
    opacity: 0;
  }
  25% {
    opacity: 1;
  }
  50% {
    opacity: 1;
  }
  75% {
    opacity: 0;
  }
}
.anim_fade_image {
  position: absolute;
  -webkit-animation-name: fadeInOut;
  -webkit-animation-timing-function: ease-in-out;
  -webkit-animation-iteration-count: infinite;
  -webkit-animation-duration: 12s;
  -webkit-animation-direction: alternate;
}

.myswiper {
  width: 100%;
  height: 101%;
  background-size: cover;
  background-color: ivory;
}

.myswiper swiper {
  width: 100%;
  height: 100%;
}

.myswiper swiper image {
  width: 100%;
  height: 100%;
}

.mynavigator {
  font-weight: 800;
  position: absolute;
  bottom: 0%;
  width: 100%;
  height: 30%;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}

.mynavigator text {
  color: black;
  font-size: 40rpx;
  text-shadow: #fff 3px 0 0;
  background-color: whitesmoke;
  opacity: 0.8;
}

.navbuttons {
  width: 80%;
  height: 80%;
  margin: 10rpx, 10rpx, 0, 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  /**
    background-color: whitesmoke;
    opacity: 0.9;
    border-radius: 10%;
    box-shadow:1rpx 1rpx 8rpx #C4C4C4;
    **/
}

.navbuttons button {
  width: 85%;
  color: black;
